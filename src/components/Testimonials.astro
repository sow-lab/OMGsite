          <Image
            alt=""
            src={testimonial}
            class="size-14 rounded-full object-cover"
            format="webp"
          />

          <div>
            <div class="flex justify-center gap-0.5 text-blue-500">
              <Icon name="star" size={30} />
              <Icon name="star" size={30} />
              <Icon name="star" size={30} />
              <Icon name="star" size={30} />
              <Icon name="star" size={30} />
            </div>

            <p class="mt-0.5 text-lg font-medium text-gray-900">Paul Starr</p>
